import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int tempoGastoNaViagem = sc.nextInt();
		int velocidadeMediaNaViagem = sc.nextInt();
		double distanciaPercorrida = tempoGastoNaViagem * velocidadeMediaNaViagem;
		double litrosNecessarios = distanciaPercorrida/12;
		System.out.printf("%.3f%n", litrosNecessarios);
		sc.close();

	}

}
